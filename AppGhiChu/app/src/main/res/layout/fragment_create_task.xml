<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="30dp"
    android:paddingBottom="50dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/product_sans_bold"
        android:text="TẠO GHI CHÚ"
        android:textColor="#2A87D2"
        android:textSize="22sp"
        tools:ignore="MissingPrefix" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/product_sans_regular"
        android:text="Điền Công Việc:"
        tools:ignore="MissingPrefix" />

    <EditText
        android:id="@+id/addTaskTitle"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_border"
        android:fontFamily="@font/product_sans_regular"
        android:padding="10dp"
        android:singleLine="true"
        android:textSize="14sp"
        tools:ignore="MissingPrefix" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="____________________________________________________" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/product_sans_regular"
        android:text="Mô Tả Công Việc:"
        tools:ignore="MissingPrefix" />

    <EditText
        android:textSize="14sp"
        android:fontFamily="@font/product_sans_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:background="@drawable/btn_border"
        android:padding="10dp"
        android:id="@+id/addTaskDescription"
        tools:ignore="MissingPrefix" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="____________________________________________________" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/product_sans_regular"
        android:text="Chọn Ngày:"
        tools:ignore="MissingPrefix" />

    <EditText
        android:id="@+id/taskDate"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_border"
        android:fontFamily="@font/product_sans_regular"
        android:padding="10dp"
        android:singleLine="true"
        android:textSize="14sp"
        tools:ignore="MissingPrefix" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="____________________________________________________" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/product_sans_regular"
        android:text="Chọn Thời Gian:"
        tools:ignore="MissingPrefix" />

    <EditText
        android:textSize="14sp"
        android:fontFamily="@font/product_sans_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:background="@drawable/btn_border"
        android:padding="10dp"
        android:id="@+id/taskTime"
        tools:ignore="MissingPrefix" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="____________________________________________________" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/product_sans_regular"
        android:text="Ghi Chú khác:"
        tools:ignore="MissingPrefix" />

    <EditText
        android:textSize="14sp"
        android:fontFamily="@font/product_sans_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:background="@drawable/btn_border"
        android:padding="10dp"
        android:id="@+id/taskEvent"
        tools:ignore="MissingPrefix" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="____________________________________________________" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addTask"
        android:fontFamily="@font/product_sans_bold"
        android:text="create notes"
        android:background="@drawable/btn_background"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="40dp" />

</LinearLayout>
</ScrollView>